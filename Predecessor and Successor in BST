/* BST Node
class Node {
   public:
    int data;
    Node *left;
    Node *right;

    Node(int x){
        data = x;
        left = NULL;
        right = NULL;
    }
};
*/

class Solution {
  public:
 Node* floor(Node* root, int x) {
        // code here
        if(root==NULL){
            return NULL;
        }
        if(root->data==x){
            return floor(root->left,x);
        }
        if(root->data>x){
            return floor(root->left,x);
        }
      Node* floorRight=floor(root->right,x);
      if(floorRight==NULL){
          return root;
      }
      else{
          return floorRight;
      }
      return NULL;
    }
  Node* findCeil(Node* root, int x) {
        // code here
   
        // code here
        if(root==NULL){
            return NULL;
        }
         if(root->data==x){
             return findCeil(root->right,x);
         }
        if(root->data<x){
            return findCeil(root->right,x);
        }
      Node* floorLeft=findCeil(root->left,x);
      if(floorLeft==NULL){
          return root;
      }
      else{
          return floorLeft;
      }
      return NULL;
    }
    vector<Node*> findPreSuc(Node* root, int key) {
        // code here
    vector<Node*>result;
    Node* predecessor=floor(root,key);
    Node* successor= findCeil(root,key);
    result.push_back(predecessor);
     result.push_back(successor);
    return result;
    }
};
