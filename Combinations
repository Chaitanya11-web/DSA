#brute force
class Solution {
public:
vector<vector<int>>combination(int n,int k,int index,vector<vector<int>>&ans, vector<int>&res){
    if(k==0){
        ans.push_back(res);
        return ans;
    }
     if (index > n) return ans;
    res.push_back(index);
    combination(n,k-1,index+1,ans,res);
res.pop_back();
combination(n,k,index+1,ans,res);
    
    return ans;
}
    vector<vector<int>> combine(int n, int k) {
      vector<vector<int>>ans;
      vector<int>res;
      return combination(n,k,1,ans,res);  
    }
};
#2nd way
class Solution {
public:
vector<vector<int>>combination(int n,int k,int index,vector<vector<int>>&ans, vector<int>&res){
    if(k==0){
        ans.push_back(res);
        return ans;
    }
    for(int i=index;i<=n;i++){
    res.push_back(i);
    combination(n,k-1,i+1,ans,res);
res.pop_back();

    }
    return ans;
}
    vector<vector<int>> combine(int n, int k) {
      vector<vector<int>>ans;
      vector<int>res;
      return combination(n,k,1,ans,res);  
    }
};
